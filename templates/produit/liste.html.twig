{% extends 'accueil.html.twig' %}

{% block title %}Gestion des Produits{% endblock %}
{% block h1 %}<h1 class="h3 mb-0 text-gray-800">Produit</h1>{% endblock %}
{% block body %}
  <div class="row">
     <div class="container col-md-8">
      <div class="card">
         <div class="card-header">Liste des produits</div>
        <div class="card-body">
       <table class="table table-striped table-bordered">
          <tr>
            <th>Id</th>
            <th>Libelle</th>
            <th>Stock</th>
            <th>Categorie</th>
            <th>Utilisateur</th>
            <th>Action</th>
            <th>Action</th>
          </tr>
          {% for p in produits %}
             <tr>
                <td>{{ p.id }}</td>
                <td>{{ p.libelle }}</td>
                <td>{{ p.stock }}</td>
                <td>{{ p.categorie }}</td>
                <td>{{ p.user }}</td>
                <td><a class="btn btn-primary" href="{{ path('edit_produit', {'id': p.id}) }}">Editer</a></td>
                <td><a class="btn btn-danger" href="{{ path('delete_produit', {'id': p.id}) }}" >Supprimer</a></td>
             </tr>
          {% endfor %}
       </table>
      </div>
   </div>   
     </div>
     <div class="container col-md-4">
      <div class="card">
         <div class="card-header">Formulaire de gestion des produits</div>
        <div class="card-body">
          {% for message in app.flashes('success') %}
          <div class="card-header alert alert-success">
           {{ message }}
             </div>
           {% endfor %}
        {{ form(form)}}
      </div>
   </div>  
   </div> 
   </div>
{% endblock %}
