{% extends 'accueil.html.twig' %}

{% block title %}Entree{% endblock %}
{% block h1 %}<h1 class="h3 mb-0 text-gray-800">Entree</h1>{% endblock %}
{% block body %}
<div class="row">
     <div class="container col-md-6">
      <div class="card">
         <div class="card-header">Liste des entrées</div>
        <div class="card-body">
       <table class="table table-striped table-bordered">
          <tr>
            <th>Id</th>
            <th>Produit</th>
            <th>Quantité</th>
            <th>Prix</th>
            <th>Date</th>
          </tr>
         {% for e in entrees %}
             <tr>
                <td>{{ e.id }}</td>
                <td>{{ e.produit }}</td>
                <td>{{ e.qte }}</td>
                <td>{{ e.prix }}</td>
                <td>{{ e.date|date("d/m/Y") }}</td>
             </tr>
          {% endfor %} 
       </table>
      </div>
   </div>   
     </div>
     <div class="container col-md-6">
      <div class="card">
         <div class="card-header">Formulaire de gestion des entrées</div>
        <div class="card-body">
       {{ form(form)}}
      </div>
   </div>  
   </div> 
   </div>
{% endblock %}
